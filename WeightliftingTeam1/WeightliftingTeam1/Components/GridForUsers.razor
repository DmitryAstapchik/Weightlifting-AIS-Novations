@typeparam TItem

@if (GridData == null)
{
    <p>Loading ...</p>
}
else
{
<TelerikGrid Data=GridData
             Class="fade-in-animation"
             @bind-Page=CurrentPage PageSize=PageSize
             Height="100%"
             Pageable="true" Sortable="true" Groupable="false"
             Resizable="true" Reorderable="true" AutoGenerateColumns="true"
             Width="100%">
    <GridToolBar>
        <GridSearchBox />
    </GridToolBar>
    <GridColumns>
        <GridAutoGeneratedColumns ColumnWidth="110px" />
    </GridColumns>
</TelerikGrid>
}
