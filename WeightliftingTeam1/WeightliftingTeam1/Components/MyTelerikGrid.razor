@using WeightliftingTeam1.Data
@using WeightliftingTeam1.TestModel


@switch (PanelType)
{
    case MyPanelType.Athletes:
        @if (AthleteResults == null)
        {
            <p>Loading......</p>
        }
        else
        {
            <TelerikGrid Data="@(AthleteResults)"
                         Height="500px" PageSize="6"
                         Pageable="true" Sortable="true" Groupable="false"
                         Resizable="false" Reorderable="true" AutoGenerateColumns="true"
                         Width="100%">
                <GridToolBar>
                    <GridSearchBox />
                </GridToolBar>
                <GridColumns>
                    <GridAutoGeneratedColumns ColumnWidth="100px" />
                </GridColumns>
            </TelerikGrid>
        }
        break;
    case MyPanelType.Attempts:
        @if (Attempts == null)
        {
            <p>Loading......</p>
        }
        else
        {
            <TelerikGrid Data="@(Attempts)"
                         Height="500px" PageSize="6"
                         Pageable="true" Sortable="true" Groupable="false"
                         Resizable="false" Reorderable="true" AutoGenerateColumns="true"
                         Width="100%">
                <GridToolBar>
                    <GridSearchBox />
                </GridToolBar>
                <GridColumns>
                    <GridAutoGeneratedColumns ColumnWidth="100px" />
                </GridColumns>
            </TelerikGrid>
        }
        break;
}


@code {
    [Parameter]
    public MyPanelType PanelType { get; set; }

    [Parameter]
    public List<AthleteResult> AthleteResults { get; set; }

    [Parameter]
    public List<Attempt> Attempts { get; set; }

}
