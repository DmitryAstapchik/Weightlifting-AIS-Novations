@using WeightliftingTeam1.Data
@using WeightliftingTeam1.ModelsForOutput


@switch (PanelType)
{
    case MyPanelType.Attempts:
        @if (Attempts == null)
        {
            <p>Loading Attempts......</p>
        }
        else
        {
            <TelerikGrid Data="@(Attempts)"
                         Height="500px" PageSize="6"
                         Pageable="true" Sortable="true" Groupable="false"
                         Resizable="false" Reorderable="true" AutoGenerateColumns="true"
                         Width="100%">
                <GridToolBar>
                    <GridSearchBox />
                </GridToolBar>
                <GridColumns>
                    <GridAutoGeneratedColumns ColumnWidth="100px" />
                </GridColumns>
            </TelerikGrid>
        }
        break;
    case MyPanelType.Athletes:
        @if (Athletes == null)
        {
            <p>Loading Athletes......</p>
        }
        else
        {
            <TelerikGrid Data="@(Athletes)"
                         Height="500px" PageSize="6"
                         Pageable="true" Sortable="true" Groupable="false"
                         Resizable="false" Reorderable="true" AutoGenerateColumns="true"
                         Width="100%">
                <GridToolBar>
                    <GridSearchBox />
                </GridToolBar>
                <GridColumns>
                    <GridAutoGeneratedColumns ColumnWidth="100px" />
                </GridColumns>
            </TelerikGrid>
        }
        break;
}