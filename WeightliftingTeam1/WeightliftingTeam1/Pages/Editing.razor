@layout MainLayout
@page "/editing"
@using WeightliftingTeam1.Components
@using WeightliftingTeam1.Data
@using WeightliftingTeam1.ModelsForOutput
@using WeightliftingTeam1.Panels
@inject DataRetrievalService dataRetrievalService

    <div class="min-vh-70" style="padding-top:56px;">


        <div class="shadow my-container container-max-width mx-2 mx-sm-3 mx-md-4 mx-lg-5 my-4 p-2 fade-in-animation">
            <h6 class="flex-wrap-container ">
                Define which tables should be shown
            </h6>
            <div class="flex-wrap-container ">

                <section>

                    <div class="stacked-checkboxes">
                        <EditForm Model="this">
                            <div class="checkbox-items">
                                <InputCheckbox id="Athletes-checkbox" class="margin-helper" @bind-Value="AthletesShown" />
                                <label for="Athletes-checkbox">
                                    Athletes
                                </label>
                            </div>

                            <div class="checkbox-items">
                                <InputCheckbox id="Attempts-checkbox" class="margin-helper" @bind-Value="AttemptsShown" />
                                <label for="Attempts-checkbox">
                                    Attempts
                                </label>
                            </div>

                            <div class="checkbox-items">
                                <InputCheckbox id="Competitions-checkbox" class="margin-helper" @bind-Value="CompetitionsShown" />
                                <label for="Competitions-checkbox">
                                    Competitions
                                </label>
                            </div>

                            <div class="checkbox-items">
                                <InputCheckbox id="Countries-checkbox" class="margin-helper" @bind-Value="CountriesShown" />
                                <label for="Countries-checkbox">
                                    Countries
                                </label>
                            </div>

                            <div class="checkbox-items">
                                <InputCheckbox id="Disqualifications-checkbox" class="margin-helper" @bind-Value="DisqualificationsShown" />
                                <label for="Disqualifications-checkbox">
                                    Disqualifications
                                </label>
                            </div>

                            
                        </EditForm>
                    </div>
                </section>
                <section>
                    <div class="stacked-checkboxes">
                        <EditForm Model="this">

                            <div class="checkbox-items">
                                <InputCheckbox id="Periods-checkbox" class="margin-helper" @bind-Value="PeriodsShown" />
                                <label for="Periods-checkbox">
                                    Periods
                                </label>
                            </div>

                            <div class="checkbox-items">
                                <InputCheckbox id="Places-checkbox" class="margin-helper" @bind-Value="PlacesShown" />
                                <label for="Places-checkbox">
                                    Places
                                </label>
                            </div>

                            <div class="checkbox-items">
                                <InputCheckbox id="Records-checkbox" class="margin-helper" @bind-Value="RecordsShown" />
                                <label for="Records-checkbox">
                                    Records
                                </label>
                            </div>

                            <div class="checkbox-items">
                                <InputCheckbox id="RecordTypes-checkbox" class="margin-helper" @bind-Value="RecordTypesShown" />
                                <label for="RecordTypes-checkbox">
                                    RecordTypes
                                </label>
                            </div>

                            <div class="checkbox-items">
                                <InputCheckbox id="WeightCategories-checkbox" class="margin-helper" @bind-Value="WeightCategoriesShown" />
                                <label for="WeightCategories-checkbox">
                                    WeightCategories
                                </label>
                            </div>
                        </EditForm>
                    </div>
                </section>
            </div>
        </div>



        <GridForEditing @ref="AthletesGridForEditing" OnDeleteClick="UpdataDataForViews" SearchDataTask="AthletesTask" IsShown="AthletesShown">
        </GridForEditing>

        <GridForEditing @ref="AttemptsGridForEditing" OnDeleteClick="UpdataDataForViews" SearchDataTask="AttemptsTask" IsShown="AttemptsShown">
        </GridForEditing>

        <GridForEditing @ref="CompetitionsGridForEditing" OnDeleteClick="UpdataDataForViews" SearchDataTask="CompetitionsTask" 
                        IsShown="CompetitionsShown"></GridForEditing>

        <GridForEditing @ref="CountriesGridForEditing" OnDeleteClick="UpdataDataForViews" SearchDataTask="CountriesTask" IsShown="CountriesShown">
        </GridForEditing>

        <GridForEditing @ref="DisqualificationsGridForEditing" OnDeleteClick="UpdataDataForViews" SearchDataTask="DisqualificationsTask" 
                        IsShown="DisqualificationsShown"></GridForEditing>

        <GridForEditing @ref="PeriodsGridForEditing" OnDeleteClick="UpdataDataForViews" SearchDataTask="PeriodsTask" IsShown="PeriodsShown">
        </GridForEditing>

        <GridForEditing @ref="PlacesGridForEditing" OnDeleteClick="UpdataDataForViews" SearchDataTask="PlacesTask" IsShown="PlacesShown">
        </GridForEditing>

        <GridForEditing @ref="RecordsGridForEditing" OnDeleteClick="UpdataDataForViews" SearchDataTask="RecordsTask" IsShown="RecordsShown">
        </GridForEditing>

        <GridForEditing @ref="RecordTypesGridForEditing" OnDeleteClick="UpdataDataForViews" SearchDataTask="RecordTypesTask" 
                        IsShown="RecordTypesShown"></GridForEditing>

        <GridForEditing @ref="WeightCategoriesGridForEditing" OnDeleteClick="UpdataDataForViews" SearchDataTask="WeightCategoriesTask" 
                        IsShown="WeightCategoriesShown"></GridForEditing>

    </div>

<style>
    

    .container-max-width {
        max-width: 600px;
    }
    section {
        margin: 0 10px;
        flex: 1 1 220px;
    }
</style>